default:
    suites:
        users:
            contexts:
                - App\Tests\Behat\RequestContext
                - App\Tests\Behat\UserContext
                - App\Tests\Behat\TransformationContext

            filters:
                tags: '@users'

        addresses:
            contexts:
                - App\Tests\Behat\RequestContext
                - App\Tests\Behat\UserContext
                - App\Tests\Behat\TransformationContext

            filters:
                tags: '@addresses'
        api_doc:
            contexts:
                - App\Tests\Behat\RequestContext
            filters:
                tags: '@apiDoc'


    extensions:
        FriendsOfBehat\SymfonyExtension:
            bootstrap: tests/bootstrap.php
